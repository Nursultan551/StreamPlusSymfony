<div class="form-step d-none" data-form-wizard-target="step">
    <h4>Confirmation</h4>
    <p>Please review your details and submit your form.</p>

    <!-- Overview Section -->
    <div class="card p-3 mb-3">
        <h5>User Information</h5>
        <ul>
            <li>
                <span class="fw-semibold">Full Name:</span>
                <span data-form-wizard-target="reviewName"></span>
            </li>
            <li>
                <span class="fw-semibold">Email Address:</span>
                <span data-form-wizard-target="reviewEmail"></span>
            </li>
            <li>
                <span class="fw-semibold">Phone Number:</span>
                <span data-form-wizard-target="reviewPhone"></span>
            </li>
            <li>
                <span class="fw-semibold">Subscription Type:</span>
                <span data-form-wizard-target="reviewSubscriptionType"></span>
            </li>
        </ul>

        <h5>Address</h5>
        <ul>
            <li>
                <span class="fw-semibold">Address Line 1:</span>
                <span data-form-wizard-target="reviewAddressLine1"></span>
            </li>
            <li>
                <span class="fw-semibold">Address Line 2:</span>
                <span data-form-wizard-target="reviewAddressLine2"></span>
            </li>
            <li>
                <span class="fw-semibold">City:</span>
                <span data-form-wizard-target="reviewCity"></span>
            </li>
            <li>
                <span class="fw-semibold">Postal Code:</span>
                <span data-form-wizard-target="reviewPostalCode"></span>
            </li>
            <li>
                <span class="fw-semibold">State/Province:</span>
                <span data-form-wizard-target="reviewState"></span>
            </li>
            <li>
                <span class="fw-semibold">Country:</span>
                <span data-form-wizard-target="reviewCountry"></span>
            </li>
        </ul>


    <div class="d-none" data-form-wizard-target="paymentInfo">
        <h5>Payment Information</h5>
        <ul>
            <li>
                <span class="fw-semibold">Card Number:</span>
                <span data-form-wizard-target="reviewCreditCardNumber"></span>
            </li>
            <li>
                <span class="fw-semibold">Expiration Date:</span>
                <span data-form-wizard-target="reviewExpirationDate"></span>
            </li>
        </ul>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <button type="button" class="btn btn-secondary" data-action="click->form-wizard#previous">Previous</button>
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</div>
